<i class="material-icons menu-open">menu</i>

<nav class="offscreen">

  <i class="material-icons menu-close">close</i>

  <ul>

  {{#foreach navigation}}
    <li class="nav-{{slug}}{{#if current}} active{{/if}}">
      <a href="{{url}}">{{label}}</a>
    </li>
  {{/foreach}}

  </ul>

    {{#if @labs.subscribers}}
        <a class="btn btn-colored" href="{{@blog.url}}/subscribe/">Subscribe</a>
    {{else}}
        <a class="btn btn-colored" href="{{@blog.url}}/rss/">Subscribe</a>
    {{/if}}

</nav>
